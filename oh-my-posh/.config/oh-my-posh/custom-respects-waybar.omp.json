{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,
  "palette": {
    "base": "#1e1e2e",
    "surface": "#313244",
    "overlay": "#45475a",
    "text": "#cdd6f4",
    "subtext": "#bac2de",
    "mauve": "#cba6f7",
    "blue": "#89b4fa",
    "sapphire": "#74c7ec",
    "teal": "#94e2d5",
    "green": "#a6e3a1",
    "yellow": "#f9e2af",
    "peach": "#fab387",
    "red": "#f38ba8"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "background": "transparent",
          "foreground": "p:red",
          "template": " \u26a1"
        },
        {
          "type": "os",
          "style": "plain",
          "background": "transparent",
          "foreground": "p:subtext",
          "properties": {
            "alpine": "\uf300",
            "arch": "\uf303",
            "centos": "\uf304",
            "debian": "\uf306",
            "elementary": "\uf309",
            "fedora": "\uf30a",
            "gentoo": "\uf30d",
            "linux": "\ue712",
            "macos": "\ue711",
            "manjaro": "\uf312",
            "mint": "\uf30f",
            "opensuse": "\uf314",
            "raspbian": "\uf315",
            "ubuntu": "\uf31c",
            "windows": "\ue62a"
          },
          "template": " {{ if .WSL }}WSL · {{ end }}{{ .Icon }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "background": "p:surface",
          "foreground": "p:text",
          "properties": {
            "style": "agnoster_short",
            "home_icon": "\ueb06",
            "folder_icon": "\ue5fe",
            "folder_separator_icon": " <#45475a>\ue0bd </>"
          },
          "template": " \ue5fe {{ .Path }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "background": "p:overlay",
          "foreground": "p:subtext",
          "properties": {
            "fetch_status": true
          },
          "template": " \ue725 {{ .HEAD }}{{ if .Staging.Changed }} <#a6e3a1>\uf046 {{ .Staging.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} <#fab387>\uf044 {{ .Working.String }}</>{{ end }}{{ if gt .StashCount 0 }} <#89b4fa>\ueb4b {{ .StashCount }}</>{{ end }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "background": "transparent",
          "foreground": "p:teal",
          "properties": {
            "style": "dallas",
            "threshold": 0
          },
          "template": " ⏱  {{ .FormattedMs }}s "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:text",
          "template": " \u03bb ",
          "OLDtemplate": " {{ if .SSHSession }}\ueba9 {{ end }}{{ .UserName }} <#bac2de>·</> {{ .HostName | lower }} "
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:green",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "template": "\uf061",
          "OLDtemplate": "\uf432",
          "OLD1template": "\u226B"
        }
      ]
    }
  ]
}
