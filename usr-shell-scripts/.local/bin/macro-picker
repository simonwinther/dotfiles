#!/bin/bash

cat <<EOF | fzf \
  --delimiter='|' \
  --reverse \
  --border=rounded \
  --margin=5% \
  --prompt="Search > " \
  --color=fg:white,fg+:white,bg+:-1 \
  --color=hl:green,hl+:bright-green \
  --color=border:green,prompt:green,pointer:green,marker:green,spinner:green,info:gray |

Email Signature   | Best regards, Name
Zoom Link         | https://zoom.us/j/123456789
Shrug             | ¯\_(ツ)_/¯
Meeting Template  | Hi team, here is the agenda for today: 
EOF
  awk -F '|' '{print $2}' | sed 's/^[ \t]*//' | tr -d '\n' | wl-copy
