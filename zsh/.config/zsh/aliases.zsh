# ───────────── PATH ───────────── 
alias lg='lazygit'

# ───────────── Clipboard Copy ─────────────  
alias cc='xclip -selection clipboard'

# ───────────── Eza (better ls) ─────────────
alias ls="eza --icons=always"
alias ll="eza -la --icons=always"

# ──────────── Zoxide (better cd) ─────────────
eval "$(zoxide init zsh)"
alias cd="z"

# ──────────── Clear Command ─────────────
alias cl='clear'

# ─────────── Quick Exit ─────────────
alias q='exit'

# ─────────── Tmux Shortcuts ─────────────
alias ta="tmux attach"

